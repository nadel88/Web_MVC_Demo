
@{
    ViewBag.Title = "Products";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Products will be displayed in a table on this page</p>
<form action="@Url.Action("SearchProduct", "Home")">
    <input type="text" placeholder="Search.." name="search" id="search">
    <button type="submit"><i class="fa fa-search"></i></button>
</form>


<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<table>
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Product Description</th>
        <th>Stock</th>
    </tr>

    @{
        @model List<SImpleWebApp.Models.T_products>

        for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model.ElementAt(i).P_id</td>
                <td>@Model.ElementAt(i).P_name</td>
                <td>@Model.ElementAt(i).P_description</td>
                <td>@Model.ElementAt(i).P_stock</td>
            </tr>
        }
    }



    <!--<tr>
